<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!--========== BOX ICONS ==========-->
    <link rel="icon" href="/images/favicon.png" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css"
    />

    <!--========== CSS ==========-->
    <link
      rel="stylesheet"
      href="/css/general/generalInner.css
  "
    />
    <link rel="stylesheet" href="/css/myPosts/myPosts.css" />

    <!--========== JQUERY a SWEET ==========-->
    <script
      src="https://code.jquery.com/jquery-3.5.1.min.js"
      integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
      crossorigin="anonymous"
    ></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <title>Moje příspěvky</title>
  </head>
  <body>
    <!--========== HEADER ==========-->
    <header class="header">
      <div class="header__container">
        <img src="/images/ilandio_logo.png" alt="" class="header__img" />

        <p class="header__logo">Moje příspěvky</p>
        <p class="header__logo__second">
          <i>„Já učím tebe, jiný učí mě.“ </i>
        </p>

        <div class="header__toggle">
          <i class="bx bx-menu" id="header-toggle"></i>
        </div>
      </div>
    </header>

    <!--========== NAV ==========-->
    <div class="nav" id="navbar">
      <nav class="nav__container">
        <div>
          <a
            href="https://www.facebook.com/ilandio/"
            target="_blank"
            class="nav__link nav__logo"
          >
            <i class="bx bxs-disc nav__icon"></i>
            <span class="nav__logo-name">Novinky</span>
          </a>

          <div class="nav__list">
            <div class="nav__items">
              <h3 class="nav__subtitle">Příspěvky</h3>

              <a href="/posts-list" class="nav__link">
                <i class="bx bx-task nav__icon"></i>
                <span class="nav__name">Seznam příspěvků</span>
              </a>

              <a href="/my-posts" class="nav__link">
                <i class="bx bx-pencil nav__icon"></i>
                <span class="nav__name">Moje příspěvky</span>
              </a>
            </div>

            <div class="nav__items">
              <h3 class="nav__subtitle">Uživatelé</h3>

              <a href="/users-list" class="nav__link">
                <i class="bx bx-user nav__icon"></i>
                <span class="nav__name">Seznam uživatelů</span>
              </a>
              <div class="nav__dropdown">
                <a href="#" class="nav__link">
                  <i class="bx bx-cog nav__icon"></i>
                  <span class="nav__name">Můj profil</span>
                  <i
                    class="bx bx-chevron-down nav__icon nav__dropdown-icon"
                  ></i>
                </a>

                <div class="nav__dropdown-collapse">
                  <div class="nav__dropdown-content">
                    <a href="/my-profile" class="nav__dropdown-item"
                      >Editovat profil</a
                    >
                    <a href="/my-profile-watch" class="nav__dropdown-item"
                      >Zobrazit profil</a
                    >
                  </div>
                </div>
              </div>
            </div>

            <div class="nav__items">
              <h3 class="nav__subtitle">Ostatní</h3>
              <a href="/bank" class="nav__link">
                <i class="bx bx-coin-stack nav__icon"></i>
                <span class="nav__name">Banka</span>
              </a>
              <a href="/messages" class="nav__link">
                <i class="bx bx-message-rounded nav__icon"></i>
                <span class="nav__name">Zprávy</span>
                <span id="messagesBadge"></span>
              </a>
            </div>
          </div>
        </div>

        <a href="/logout" class="nav__link nav__logout">
          <i class="bx bx-log-out nav__icon"></i>
          <span class="nav__name">Odhlásit se</span>
        </a>
      </nav>
    </div>

    <!--========== CONTENTS ==========-->
    <main>
      <div class="my-post-page">
        <div class="container">
          <div class="my-post">
            <form>
              <p class="heading-input">Vložit příspěvek</p>
              <div class="grid grid--2-cols">
                <div class="form-item">
                  <input type="text" id="title" placeholder="" required="" />
                  <label for="title">Název příspěvku</label>
                </div>
                <div class="form-item">
                  <input
                    type="Number"
                    id="price"
                    placeholder=""
                    min="0"
                    required=""
                  />
                  <label for="price">Cena v EC</label>
                </div>
              </div>
              <div class="form-item">
                <textarea
                  name=""
                  id="content"
                  cols="30"
                  rows="10"
                  placeholder=""
                ></textarea>
                <label for="content">Obsah příspěvku</label>
              </div>
              <div class="grid grid--5-cols">
                <div class="form-item">
                  <input
                    class="input-field"
                    list="typeList"
                    name="type"
                    id="type"
                    placeholder=""
                  />
                  <datalist id="typeList">
                    <option value="nabídka"></option>
                    <option value="poptávka"></option>
                  </datalist>
                  <label for="type">Typ</label>
                </div>
                <div class="form-item">
                  <input
                    class="input-field"
                    list="categoryList"
                    name="category"
                    id="category"
                    placeholder=""
                  />
                  <datalist id="categoryList">
                    <option value="javascript">JavaScript</option>
                    <option value="react/vue/anglular">
                      React/Vue/Anglular
                    </option>
                    <option value="node">Node</option>
                    <option value="python">Python</option>
                    <option value="html/css">HTML/CSS</option>
                    <option value="java">Java</option>
                    <option value="databáze">Databáze</option>
                    <option value="csharp">C#</option>
                    <option value="cplusplus">C++</option>
                    <option value="php">PHP</option>
                    <option value="swift/kotlin">Swift/Kotlin</option>
                    <option value="statistika">Statistika</option>
                    <option value="r">R</option>
                    <option value="matlab">Matlab</option>
                    <option value="ruby">Ruby</option>
                    <option value="devops">DevOps</option>
                    <option value="go">Go</option>
                    <option value="testovaní">Testování</option>
                    <option value="ostatní">Ostatní</option>
                  </datalist>
                  <label for="category">Kategorie</label>
                </div>
                <div class="form-item">
                  <input
                    class="input-field"
                    list="levelList"
                    name="level"
                    id="level"
                    placeholder=""
                  />
                  <datalist id="levelList">
                    <option value="junior"></option>
                    <option value="medior"></option>
                    <option value="senior"></option>
                  </datalist>
                  <label for="level">Úroveň</label>
                </div>
                <div class="form-item">
                  <input
                    class="input-field filter-field"
                    list="groupList"
                    name="group"
                    id="group"
                    placeholder=""
                  />
                  <datalist id="groupList">
                    <option value="individuálně"></option>
                    <option value="skupinově"></option>
                  </datalist>
                  <label for="group">Forma</label>
                </div>
                <div class="form-item">
                  <input
                    class="input-field"
                    list="environmentList"
                    name="environment"
                    id="environment"
                    placeholder=""
                  />
                  <datalist id="environmentList">
                    <option value="offline"></option>
                    <option value="online"></option>
                    <option value="offline/online"></option>
                  </datalist>
                  <label for="environment">Prostředí</label>
                </div>
              </div>

              <input class="button-1" type="submit" value="Vložit příspěvek" />
            </form>
          </div>
          <div class="my-posts-container">
            <% posts.forEach(function(post) { %>
            <div class="my-post">
              <div class="grid grid--2-cols-post">
                <div class="my-post-mainImage">
                  <img src="<%= post.postedByProfilePic %>" alt="user" />
                </div>
                <div class="my-post-body">
                  <h4><%= post.title %></h4>
                  <i><%= post.time%></i>
                  <p class="my-post-content"><%= post.content %></p>
                </div>
              </div>

              <div class="my-post-about">
                <div class="my-post-tags grid grid--6-cols">
                  <span class="tag tag-one"><%= post.type %></span>
                  <span class="tag tag-one"><%= post.category %></span>
                  <span class="tag tag-two"><%= post.level %></span>
                  <span class="tag tag-two"><%= post.group %></span>
                  <span class="tag tag-two"><%= post.environment %></span>
                  <span class="tag tag-three"><%= post.price %> EC</span>
                </div>
              </div>
              <div class="my-post-delete">
                <a onclick="confirmPopUp(`/post-delete/<%=post._id%>`)">🗑️</a>
              </div>
            </div>
            <% }); %>
          </div>
        </div>
      </div>
    </main>

    <script
      type="module"
      src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"
    ></script>
    <script
      nomodule
      src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"
    ></script>
    <script src="/js/myPosts.js"></script>
    <script src="/js/commonLoggedIn.js"></script>
  </body>
</html>
