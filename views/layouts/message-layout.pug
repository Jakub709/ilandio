        i.bx.bxs-disc.nav__icon
        span.nav__logo-name Novinky
      .nav__list
        .nav__items
          h3.nav__subtitle Příspěvky
          a.nav__link(href='/posts-list')
            i.bx.bx-task.nav__icon
            span.nav__name Příspěvky
          a.nav__link(href='/my-posts')
